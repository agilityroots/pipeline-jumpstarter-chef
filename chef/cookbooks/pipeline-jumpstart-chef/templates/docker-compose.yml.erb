version: "3"

services:
  jenkins:
    image: agilityroots/jenkins:1.0
    ports:
      - "8080:8080"
    networks:
      - pipelinenet
    volumes:
      - jenkins_home:/var/jenkins_home
  
  nexus:
    image: sonatype/nexus3:3.12.1
    ports: 
      - "8081:8081"
    networks:
      - pipelinenet
    volumes:
      - nexus_data:/nexus-data

  sonarqube:
    image: agilityroots/sonarqube:1.0
    ports:
      - "9000:9000"
    networks:
      - pipelinenet
    environment:
      - SONARQUBE_JDBC_URL=jdbc:postgresql://sonardb:5432/postgres
      - SONARQUBE_JDBC_USERNAME=sonar
      - SONARQUBE_JDBC_PASSWORD=son1r@qub5
    volumes:
      - sonarqube_conf:/opt/sonarqube/conf
      - sonarqube_data:/opt/sonarqube/data
      - sonarqube_extensions:/opt/sonarqube/extensions
      - sonarqube_bundled-plugins:/opt/sonarqube/lib/bundled-plugins

  sonardb:
    image: agilityroots/postgres-sonar:1.0
    ports:
      - "5432:5432"
    environment:
      - POSTGRES_USER=root
      - POSTGRES_PASSWORD=Post@gr5s
            
    networks:
      - pipelinenet  
    volumes:
      - postgresql:/var/lib/postgresql
      # This needs explicit mapping due to https://github.com/docker-library/postgres/blob/4e48e3228a30763913ece952c611e5e9b95c8759/Dockerfile.template#L52
      - postgresql_data:/var/lib/postgresql/data

networks:
  pipelinenet:
    driver: bridge

volumes:
  sonarqube_conf:/opt/sonarqube/conf
  sonarqube_data:/opt/sonarqube/data
  sonarqube_extensions:/opt/sonarqube/extensions
  sonarqube_bundled-plugins:/opt/sonarqube/bundled-plugins
  postgresql:/var/lib/postgres
  postgresql_data:/var/lib/postgres/data
  jenkins_home:/var/lib/jenkins
  nexus_data:/opt/nexus3/data